                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="F"
                app:layout_constraintBottom_toBottomOf="@+id/rb_sexo_m"
                app:layout_constraintLeft_toRightOf="@+id/rb_sexo_m"
                app:layout_constraintTop_toTopOf="@+id/rb_sexo_m"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
