                app:layout_constraintLeft_toLeftOf="@+id/rb_turno_m"
                app:layout_constraintTop_toTopOf="@+id/spinner_hospital">

                <EditText
                    android:id="@+id/et_ine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:hint="INE"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <RadioButton
                android:id="@+id/rb_turno_m"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:text="M"
                app:layout_constraintBottom_toBottomOf="@+id/tb_turno_t"
                app:layout_constraintRight_toLeftOf="@+id/tb_turno_t"
                app:layout_constraintTop_toTopOf="@+id/tb_turno_t"
                app:layout_constraintVertical_bias="1.0" />

            <RadioButton
                android:id="@+id/tb_turno_t"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="T"
                app:layout_constraintBottom_toBottomOf="@+id/rb_turno_n"
                app:layout_constraintRight_toLeftOf="@+id/rb_turno_n"
                app:layout_constraintTop_toTopOf="@+id/rb_turno_n" />

            <RadioButton
                android:id="@+id/rb_turno_n"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="N"
                app:layout_constraintRight_toRightOf="@+id/spinner_profissional"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/textInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

