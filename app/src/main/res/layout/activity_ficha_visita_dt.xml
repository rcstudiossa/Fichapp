                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/spinner_hospital"
                app:layout_constraintTop_toBottomOf="@+id/spinner_hospital">

                <EditText
