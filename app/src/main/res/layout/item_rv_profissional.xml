<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/et_nome_completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodrigo Costa dos Santos"
            android:textSize="@dimen/item_rv_text_size"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_cns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNS: 563154782"
            android:textSize="@dimen/item_rv_text_size"
            android:layout_marginTop="1dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_cbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CBO: 2204-68"
            android:textSize="@dimen/item_rv_text_size"
            android:layout_marginTop="1dp"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_edit"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/delete_bt"
        android:layout_centerVertical="true"
        android:background="@null"/>

    <ImageButton
        android:layout_alignParentRight="true"
        android:id="@+id/delete_bt"
        android:src="@drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:background="@null"/>

</RelativeLayout>