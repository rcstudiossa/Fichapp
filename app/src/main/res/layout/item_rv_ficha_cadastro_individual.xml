<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_rv"
    android:clickable="true"
    android:longClickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="8dp"
            android:layout_height="118dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ficha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Ficha: 0001"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_rv_text_size" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gradient_separator_num_ficha" />

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Nome: Rodrigo Costa"
                android:textColor="@color/colorGrayRVItem"
                android:textSize="@dimen/item_rv_text_size" />

            <TextView
                android:id="@+id/tv_cns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:text="CNS: 24561245651453214"
                android:textColor="@color/colorGrayRVItem"
                android:textSize="@dimen/item_rv_text_size" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:text="Data: 12/08/2017"
                android:textColor="@color/colorGrayRVItem"
                android:textSize="@dimen/item_rv_text_size" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bt_delete"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

